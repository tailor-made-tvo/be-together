@model ErrorModel

@{
    ViewBag.Title = "Unauthorized";
    ViewBag.Description = "Sorry, but the page requires authentication.";
}

<div class="jumbotron text-center">
    <header>
        <h1><i class="fa fa-ban text-danger"></i> @ViewBag.Title</h1>
    </header>
    <p>@ViewBag.Description</p>
    <a class="btn btn-primary btn-lg" href="@Url.RouteUrl(HomeControllerRoute.GetIndex)"><span class="fa fa-home"></span> Take me home</a>
</div>